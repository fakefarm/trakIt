%p#notice= notice

%h1 Assignment History

%table.table
  %tr
    %th Date
    %th User
    %th Item
    %th Quantity
    %th Serial Number
    %th Status
    %th Comments


  %tr
    %td=  @checkout.user.created_at.strftime('%B %e')
    %td=  @checkout.user.name
    %td=  @checkout.item.name
    %td=  @checkout.quantity
    %td=  @checkout.checkout_serial
    %td=  @checkout.status

= link_to 'Edit', edit_checkout_path(@checkout)
\|
= link_to 'Back', checkouts_path


= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
