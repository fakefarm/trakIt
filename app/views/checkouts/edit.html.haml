%h1 Editing checkout

= form_for @checkout do |f|
  - if @checkout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@checkout.errors.count, "error")} prohibited this checkout from being saved:"
      %ul
        - @checkout.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.collection_select :user_id, User.all, :id, :name
  .field
    = f.label :asset_name
    = f.collection_select :asset_id, Asset.all, :id, :name
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :Due_Date
    = f.datetime_select :due_date
  / .field
  /   = f.label :Due_Date
  /   = f.select :due_date, options_for_select(checkout_dates), :include_blank => true

  .actions
    = f.submit 'Save', class: "btn"


= link_to 'Show', @checkout
\|
= link_to 'Back', checkouts_path, class: "btn back-btn"
