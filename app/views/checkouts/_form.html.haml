= form_for @checkout do |f|
  - if @checkout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@checkout.errors.count, "error")} prohibited this checkout from being saved:"
      %ul
        - @checkout.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.collection_select :user_id, User.all, :id, :name
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :item
    = f.collection_select :item_id, Item.all, :id, :name
  .field
    = f.label :status
    = f.text_field :status  
  .field
    = f.label :serial_number
    = f.text_field :checkout_serial


  .actions
    = f.submit 'Save'
