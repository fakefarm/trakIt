= form_for @serial_number do |f|
  - if @serial_number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@serial_number.errors.count, "error")} prohibited this serial_number from being saved:"
      %ul
        - @serial_number.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :trackable
    = f.check_box :trackable
  .field
    = f.label :warranty_end
    = f.date_select :warranty_end
  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
