= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  
  .control-group
    .field
      = f.label :name
      = f.text_field :name

    .field
      = f.label :bundle
      = f.collection_select :bundle_id, Bundle.all, :id, :name
  
  .actions.form-actions
    = f.submit 'Save', class: "btn btn-success"
