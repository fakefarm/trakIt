= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :trackable
    = f.check_box :trackable
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :bundle
    = f.text_field :bundle
  .actions
    = f.submit 'Save'
