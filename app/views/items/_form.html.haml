
= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
          
  .control-group
    .field
      = f.label :bundle_id
      = f.collection_select :bundle_id, Bundle.all, :id, :name
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :trackable
      = f.check_box :trackable
    .field
      = f.label :quantity
      = f.number_field :quantity
    .actions.form-actions
      = f.submit 'Save', class: "btn btn-success"
