%h1 Listing items
%table.table.table-striped

  %tr
    %th Name
    %th Available Quantity
    %th Bundle
    %th 
    %th 
    %th

  - @items.each do |item|
    %tr
      %td= link_to item.name, item
      %td= item.quantity
      %td= link_to item.bundle.name, item.bundle
      %td
      %td= link_to 'Edit', edit_item_path(item)
      %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  =  link_to 'New Item', new_item_path, class: "btn btn-success"
