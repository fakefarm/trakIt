
= form_for @asset do |f|
  - if @asset.errors.any?
    #error_explanation
      %h2= "#{pluralize(@asset.errors.count, "error")} prohibited this asset from being saved:"
      %ul
        - @asset.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    .field
      = f.label :bundle_id
      = f.collection_select :bundle_id, Bundle.all, :id, :name
      = link_to "Or, add a new bundle", new_bundle_path
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :trackable
      = f.check_box :trackable
    .field
      = f.label :quantity
      = f.number_field :quantity
    .actions.form-actions
      = f.submit 'Save', class: "btn btn-success"
