%h1 Listing assets
%table.table.table-striped

  %tr
    %th Name
    %th Available Quantity
    %th Bundle
    %th 
    %th 
    %th

  - @assets.each do |asset|
    %tr
      %td= link_to asset.name, asset
      %td= asset.quantity
      %td= link_to asset.bundle.name, asset.bundle
      %td
      %td= link_to 'Edit', edit_asset_path(asset)
      %td= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  =  link_to 'New Asset', new_asset_path, class: "btn btn-success"
